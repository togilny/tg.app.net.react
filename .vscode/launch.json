{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Run Weather App (both)",
      "configurations": [".NET Backend", "React Frontend"]
    },
    {
      "name": "Run Weather App (backend only)",
      "configurations": [".NET Backend"]
    }
  ],
  "configurations": [
    
    {
      "name": ".NET Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-server",
      "program": "${workspaceFolder}/server/bin/Debug/net9.0/WeatherApi.dll",
      "env": {
        "ASPNETCORE_URLS": "http://localhost:5001"
      },
      "args": [],
      "cwd": "${workspaceFolder}/server",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?:\\/\\/\\S+)"
      }
    },
    {
      "name": "React Frontend",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm-install",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "cwd": "${workspaceFolder}/client",
      "console": "integratedTerminal"
    }
  ]
}
